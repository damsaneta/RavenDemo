@{
    ViewBag.Title = "Product Categories";
}

<table id="myTable"></table>
<script>
    $(document).ready(function () {
        $('#myTable').dataTable({
            serverSide: true,
            processing: true,
            ajax: {
                url: "http://localhost/SqlApi/api/ProductCategories",
                dataSrc : ''
            },
            columns: [
                {
                    name: 'ID',
                    data: 'ID',
                    title: "Id",
                    sortable: false,
                    searchable: false
                },
                {
                    name: 'Name',
                    data: "Name",
                    title: "Name",
                    sortable: false,
                    searchable: false
                }
            ]
        });
    });
</script>