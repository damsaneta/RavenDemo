@using Demo.UI.Models
@{
    ViewBag.Title = "Jednostki miar";
}
<div>
    <table id="myTable"></table>
</div>

<script>
    $(document).ready(function () {
        $('#myTable').dataTable({
            serverSide: true,
            processing: false,
            paging: false,
            info: false,
            ajax: {
                url: '@Consts.RavenApiRootUrl' + "UnitsMeasure",
                dataSrc: ''
            },
            columns: [
                {
                    name: 'Name',
                    data: "Name",
                    title: "Nazwa",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'UnitMeasureCode',
                    data: "UnitMeasureCode",
                    title: "Kod jednostki",
                    sortable: true,
                    searchable: true
                }
            ],
            "language": {
                processing: "Przetwarzanie...",
                search: "Szukaj:",
                lengthMenu: "",
                info: "",
                infoEmpty: "",
                infoFiltered: "(filtrowanie spośród _MAX_ dostępnych pozycji)",
                infoPostFix: "",
                loadingRecords: "Wczytywanie...",
                zeroRecords: "Nie znaleziono pasujących pozycji",
                emptyTable: "Brak danych",
                paginate: {
                    first: "Pierwsza",
                    previous: "Poprzednia",
                    next: "Następna",
                    last: "Ostatnia"
                }
            },
            initComplete: function () {
                this.api().columns().every(function () {
                    var column = this;
                    $('#myTable .head .head_hide').html('');
                    $('<br /><input class="searchColumn" type="text" placeholder="Szukaj">')
                        .appendTo($(column.header()))
                        .on('click', function (e) {
                            e.stopPropagation();
                        }).on('keyup', function () {
                            var val = $(this).val();
                            $('#myTable_filter').find('input').val("");
                            $('#myTable').DataTable().search('');
                            column.search(val).draw();

                        });
                });
            }
        });

        $('#myTable_filter input').on('keyup', function () {
            $('.searchColumn').each(function () {
                $(this).val("");
            });
            $('#myTable').DataTable().columns().search('').draw();
        });
    });


</script>