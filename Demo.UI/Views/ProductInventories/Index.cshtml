@using Demo.UI.Models

@{
    ViewBag.Title = "Stan produktów";
}
<div>
    <table id="myTable"></table>
</div>

<script>
    $(document).ready(function () {

       $('#myTable').dataTable({
            serverSide: true,
            processing: false,
            paging: false,
            info: false,
            ajax: {
                url: '@Consts.RavenApiRootUrl' + "ProductInventories",
                dataSrc: ''
            },
            columns: [
                {
                    name: 'ProductName',
                    data: "ProductName",
                    title: "Nazwa produktu",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'LocationName',
                    data: "LocationName",
                    title: "Lokalizacja",
                    sortable: true,
                    searchable: true
                },
                {
                    name: 'Shelf',
                    data: "Shelf",
                    title: "Schowek",
                    sortable: false,
                    searchable: false
                },
                {
                    name: 'Bin',
                    data: "Bin",
                    title: "Pojemnik",
                    sortable: false,
                    searchable: false
                },
                {
                    name: 'Quantity',
                    data: "Quantity",
                    title: "Ilość",
                    sortable: false,
                    searchable: false
                }

            ],
            "language": {
                processing: "Przetwarzanie...",
                search: "Szukaj:",
                lengthMenu: "",
                info: "",
                infoEmpty: "",
                infoFiltered: "(filtrowanie spośród _MAX_ dostępnych pozycji)",
                infoPostFix: "",
                loadingRecords: "Wczytywanie...",
                zeroRecords: "Nie znaleziono pasujących pozycji",
                emptyTable: "Brak danych",
                paginate: {
                    first: "Pierwsza",
                    previous: "Poprzednia",
                    next: "Następna",
                    last: "Ostatnia"
                }
            }

        }
        );

    });

</script>
